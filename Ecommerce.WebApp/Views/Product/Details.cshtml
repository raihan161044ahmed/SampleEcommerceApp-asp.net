@model ProductDetails

<h1>Customer Details</h1>

<table>
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
</table>

<p>

    <a asp-action="Edit" class="btn btn-warning text-decoration-none" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" class="btn btn-danger text-decoration-none" asp-route-id="@Model.Id">Delete</a>

</p>
