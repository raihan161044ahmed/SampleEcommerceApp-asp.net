@model CustomerDetails

<h1>Customer Details</h1>

<table>
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Phone</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
</table>

<p>

    <a asp-action="Edit" class="btn btn-warning text-decoration-none" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Delete" class="btn btn-danger text-decoration-none" asp-route-id="@Model.Id">Delete</a>
</p>
